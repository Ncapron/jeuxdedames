{% extends 'base.html.twig' %}

{% block body %}
    <h1 style="margin-bottom: 35px;">Page d'édition des Artistes</h1>

    {{ form_start(edit_form) }}

    <div class="policeecrituretitre">
    <p class="policeecriture2">Titre de l'image de votre Artiste</p>
    {{ form_widget(edit_form.nom) }}
    </div>

    <div class="policeecrituretitre">
        <p class="policeecriture2">Ajouter votre Image</p>
        {{ form_widget(edit_form.file) }}
    </div>

    <div class="policeecrituretitre">
        <p class="policeecriture2">Texte de l'image</p>
        {{ form_widget(edit_form.texte) }}
    </div>

    <div class="policeecrituretitre">
        <p class="policeecriture2">Ajouter au slider</p>
        {{ form_widget(edit_form.ajouterslider) }}
    </div>

    <div class="policeecrituretitre">
        <p class="policeecriture2">Ajouter aux archives</p>
        {{ form_widget(edit_form.archive) }}
    </div>

    <div class="policeecrituretitre">
        <p class="policeecriture2">Ajouter le lien vers votre artiste</p>
        {{ form_widget(edit_form.lien) }}
    </div>

    <div class="policeecrituretitre">
    {{ form_widget(edit_form) }}
        <input type="submit" value="Editer le contenu" />
    {{ form_end(edit_form) }}
    </div>

    <div class="policeecrituretitre">
        {{ form_start(delete_form) }}
        <input type="submit" value="Supprimer l'artiste">
        {{ form_end(delete_form) }}
    </div>

        <div class="policeecrituretitre">
        <a href="{{ path('artiste_index') }}">Retour à la liste</a>
        </div>
{% endblock %}
