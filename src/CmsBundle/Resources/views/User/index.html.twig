{% extends 'base.html.twig' %}

{% block body %}
<!-- ******** CAROUSSEL ******** -->
<div id="h">
    <div class="section">
        <div class="col-md-12 artistes">
            {% for accueil in accueils %}
            <h1>{{ accueil.titre }}</h1>
            {% endfor %}
            <figure>
                <marquee behavior="scroll"  direction="left" height="200"
                         width="auto" scrollamount="2" scrolldelay="18" truespeed="true">

                    {% for artiste in artistes %}
                        {% if artiste.ajouterslider == true %}
                            {% if (artiste.lien != null) %}
                                <a href="{{ artiste.lien }}"><img style="width: 250px" src="{{ asset('uploads/imgcms/') }}{{ artiste.image }}"></a>
                            {% else %}
                                <img style="width: 250px" src="{{ asset('uploads/imgcms/') }}{{ artiste.image }}">
                            {% endif %}
                        {% endif %}
                    {% endfor %}
                </marquee>
            </figure>
        </div>
    </div>
</div>

<!-- ******** TEXTE PRESENTATION ******** -->

<div id="g">
    <div class="container">
        <div class="section presentation">
            <div class="col-md-4 colonne">
                {% for accueil in accueils %}
                <h4>{{ accueil.premiertitre }}</h4>
                <p class="premiertexte">{{ accueil.premiercontenu }}</p>
                {% endfor %}
            </div>
            <div class="col-md-4 colonne">
                {% for accueil in accueils %}
                    <h4>{{ accueil.deuxiemetitre }}</h4>
                    <p class="premiertexte" >{{ accueil.deuxiemecontenu }}</ppremiertexte>
                {% endfor %}
            </div>
            <div class="col-md-4 colonne">
                {% for accueil in accueils %}
                    <h4>{{ accueil.troisiemetitre }}</h4>
                    <p class="premiertexte">{{ accueil.troisiemecontenu }}</p>
                {% endfor %}
            </div>
        </div><!--/row -->
    </div><!--/container -->
</div>

<!-- ******** NOTRE EQUIPE ******** -->

<div class="container">
    <div class="row-equipes">
        <div class="col-md-5">
            {% for accueil in accueils %}
            <p class="p-equipe">{{ accueil.contenu }}</p>
            {% endfor %}
        </div>
        <div class="flotte">
            {% for accueil in accueils %}
            <img class="flotte" src="{{ asset('uploads/imgcms/') }}{{ accueil.image }}">
            {% endfor %}
        </div>
    </div><!--/row -->
</div>
