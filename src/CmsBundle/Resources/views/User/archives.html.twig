{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        footer{
            position: fixed;
            width: 100%;
            bottom: 0px;
        }
    </style>
{% endblock %}

{% block body %}
    {% if years != null %}
        <ul id="menu-accordeon">
            <li><a href="#">Menu des Catégorie d'artiste</a>
                <ul>
                    <li><a href="#">Art</a></li>
                    <li><a href="#">Art décoratif</a></li>
                    <li><a href="#">Art graphique</a></li>
                </ul>
            </li>
        </ul>
        <div class="panel-group row" id="accordion" role="tablist" aria-multiselectable="true">
            <div class=" panel-default">
                {% for year in years %}
                    <div class="panel-heading" role="tab" id="headingOne">
                        <h4 class="panel-title">
                            <a role="button" data-toggle="collapse" data-parent="#accordion" href="#{{ year }}" aria-expanded="true" aria-controls="collapseOne">
                                {{ year }}
                            </a>
                        </h4>
                    </div>
                    {% for artiste in artistes %}
                        {% if artiste.date|date("Y") == year %}
                            <div id="{{ year }}" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">
                                <div class="col-md-3 col-sm-4 col-xs-6 artistepage">
                                    <figure class="snip1239">
                                        <img src="{{ asset('uploads/imgcms/') }}{{ artiste.image }}"/>
                                        <figcaption>
                                            <h3 class="editartiste2">{{ artiste.nom }}</h3>
                                            <p class="editartiste2">{{ artiste.texte }}</p>
                                            <a href="{{ artiste.lien | external_link }}" class="read-more">Read More</a>
                                        </figcaption>
                                    </figure>
                                    <p class="editartiste"><a href="{{ path('artiste_edit', { 'id': artiste.id }) }}">Editer</a></p>
                                </div>
                            </div>
                        {% endif %}
                    {% endfor %}
                {% endfor %}
            </div>
        </div>
    {% else %}
        <h1>Il n'y a pas d'artiste dans les archives</h1>
    {% endif %}
{% endblock %}